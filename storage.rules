rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public, immutable processed assets
    match /public/{path=**} {
      allow read: if true;
      allow write: if false; // only Functions (admin) writes here
    }

    // Authenticated users can upload originals under their UID
    match /uploads/{uid}/{photoId}/{rest=**} {
      allow read: if request.auth != null && request.auth.uid == uid; // optional
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.size < 20 * 1024 * 1024 // 20MB
                   && request.resource.contentType.matches('image/.*')
                      || request.resource.contentType in ['application/octet-stream']; // some HEICs
    }

    // deny everything else
    match /{allPaths=**} { allow read, write: if false; }
  }
}
